<Window x:Class="InfoManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:InfoManager.ViewModel"
        xmlns:view="clr-namespace:InfoManager.View"
        mc:Ignorable="d"
        Title="InfoManager"
        MinWidth="900"
        MinHeight="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize">

    <Window.Resources>

        <DataTemplate DataType="{x:Type viewModel:LoginViewModel}">
            <view:LoginView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:RegistroViewModel}">
            <view:RegistroView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ClasesViewModel}">
            <view:ClasesView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:CrearClaseViewModel}">
            <view:CrearClaseView/>
        </DataTemplate>

        <DataTemplate DataType="{x:Type viewModel:ListadoAlumnosViewModel}">
            <view:ListadoAlumnosView/>
        </DataTemplate>

    </Window.Resources>

    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>

        </Grid.RowDefinitions>
   
        <Border Grid.Row="0" Background="Black">

            <Menu Background="Black"
                  Foreground="White"
                  FontSize="15"
                  HorizontalAlignment="Center"
                  IsEnabled="{Binding IsMenuEnabled}">

                <Menu.Style>
                    <Style TargetType="Menu">
                        <Setter Property="Visibility" Value="Visible"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedViewModel}"
                                         Value="{x:Type viewModel:LoginViewModel}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding SelectedViewModel}"
                                         Value="{x:Type viewModel:RegistroViewModel}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </Menu.Style>

                <MenuItem Header="Clases"
                          Command="{Binding SelectViewModelCommand}"
                          CommandParameter="{Binding ClasesViewModel}"/>

                <MenuItem Header="Crear Clase"
                          Command="{Binding SelectViewModelCommand}"
                          CommandParameter="{Binding CrearClaseViewModel}"/>

                <MenuItem Header="Alumnos"
                          Command="{Binding SelectViewModelCommand}"
                          CommandParameter="{Binding ListadoAlumnosViewModel}"/>

            </Menu>
        </Border>

        <ContentControl Grid.Row="1"
                        Content="{Binding SelectedViewModel}"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>

    </Grid>
</Window>



