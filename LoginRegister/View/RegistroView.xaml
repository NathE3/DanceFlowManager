<UserControl
    x:Class="InfoManager.View.RegistroView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewmodels="clr-namespace:InfoManager.ViewModel"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    d:DataContext="{d:DesignInstance Type=viewmodels:RegistroViewModel}"
    mc:Ignorable="d">

    <!-- Fondo con imagen -->
    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/BannerBailarina.png" Stretch="UniformToFill"/>
    </UserControl.Background>

    <!-- Contenedor central -->
    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Width="400" >
        <Border Background="#CCFFFFFF" Padding="30" SnapsToDevicePixels="True">

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Stretch" >

                <!-- Título -->
                <TextBlock Text="Registro" FontSize="32" FontWeight="Bold" Foreground="#1E1E1E" HorizontalAlignment="Center" Margin="0,0,0,25"/>

                <!-- Nombre -->
                <TextBlock Text="Nombre Completo" FontSize="14" Foreground="#1E1E1E" Margin="0,0,0,5"/>
                <ui:TextBox Text="{Binding Name, Mode=TwoWay}" PlaceholderText="Ingrese su nombre completo"
                            FontSize="14" Padding="10" BorderBrush="#4A90E2" BorderThickness="1" Background="White"
                            Margin="0,0,0,15" />

                <!-- Apellido -->
                <TextBlock Text="Apellido" FontSize="14" Foreground="#1E1E1E" Margin="0,0,0,5"/>
                <ui:TextBox Text="{Binding Apellido, Mode=TwoWay}" PlaceholderText="Ingrese su apellido"
                            FontSize="14" Padding="10" BorderBrush="#4A90E2" BorderThickness="1" Background="White"
                            Margin="0,0,0,15" />

                <!-- Usuario -->
                <TextBlock Text="Nombre de Usuario" FontSize="14" Foreground="#1E1E1E" Margin="0,0,0,5"/>
                <ui:TextBox Text="{Binding UserName, Mode=TwoWay}" PlaceholderText="Ingrese su usuario"
                            FontSize="14" Padding="10" BorderBrush="#4A90E2" BorderThickness="1" Background="White"
                            Margin="0,0,0,15" />

                <!-- Email -->
                <TextBlock Text="Correo Electrónico" FontSize="14" Foreground="#1E1E1E" Margin="0,0,0,5"/>
                <ui:TextBox Text="{Binding Email, Mode=TwoWay}" PlaceholderText="ejemplo@correo.com"
                            FontSize="14" Padding="10" BorderBrush="#4A90E2" BorderThickness="1" Background="White"
                            Margin="0,0,0,15" />

                <!-- Teléfono -->
                <TextBlock Text="Teléfono" FontSize="14" Foreground="#1E1E1E" Margin="0,0,0,5"/>
                <ui:TextBox Text="{Binding Telefono, Mode=TwoWay}" PlaceholderText="Ingrese su teléfono"
                            FontSize="14" Padding="10" BorderBrush="#4A90E2" BorderThickness="1" Background="White"
                            Margin="0,0,0,15" />

                <!-- Contraseña -->
                <TextBlock Text="Contraseña" FontSize="14" Foreground="#1E1E1E" Margin="0,0,0,5"/>
                <ui:PasswordBox Password="{Binding Password, Mode=TwoWay}" PlaceholderText="Ingrese su contraseña"
                                FontSize="14" Padding="10" BorderBrush="#4A90E2" BorderThickness="1" Background="White"
                                Margin="0,0,0,20" />

                <!-- Botón -->
                <ui:Button Content="Registrarse" Command="{Binding RegistroCommand}" Width="220" Height="50"
                           Background="#4A90E2" Foreground="White" FontSize="16" HorizontalAlignment="Center"
                           Padding="10" Margin="0,0,0,0" />

            </StackPanel>
        </Border>
    </Grid>
</UserControl>
