<UserControl x:Class="InfoManager.View.CrearClaseView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoManager.View" 
             xmlns:viewmodel="clr-namespace:InfoManager.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:CrearClaseViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="450">

    <UserControl.Background>
        <ImageBrush 
        ImageSource="/Resources/BannerBailarina.png" 
        Stretch="UniformToFill" />
    </UserControl.Background>

    <UserControl.Resources>
        <Style x:Key="SectionTitle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#D4AF37"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin" Value="0,5"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect 
                Color="Black"
                BlurRadius="0"
                ShadowDepth="0"
                Opacity="1"/>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DanceButton" TargetType="Button">
            <Setter Property="Background" Value="#3A3A3A"/>
            <Setter Property="Foreground" Value="#D4AF37"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderBrush" Value="#D4AF37"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="#000000" BlurRadius="7" ShadowDepth="2"/>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#4A4A4A"/>
                    <Setter Property="BorderBrush" Value="#E0C15A"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#2E2E2E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#D4AF37"/>
            <Setter Property="BorderThickness" Value="1.5"/>
        </Style>

        <Style TargetType="DatePicker">
            <Setter Property="Foreground" Value="#EAEAEA"/>
            <Setter Property="Background" Value="#2A2A2A"/>
            <Setter Property="BorderBrush" Value="#D4AF37"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="FontSize" Value="16"/>
        </Style>
    </UserControl.Resources>

    <Border CornerRadius="15" Padding="20" BorderThickness="2" BorderBrush="#D4AF37" Margin="20" Background="#1A1A1A90">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="20,0,20,0" VerticalAlignment="Center">
                <TextBlock Text="Nombre:" Style="{StaticResource SectionTitle}"/>
                <TextBox Text="{Binding Nombre, Mode=TwoWay}"/>

                <TextBlock Text="Descripción:" Style="{StaticResource SectionTitle}"/>
                <TextBox Text="{Binding Descripcion, Mode=TwoWay}" TextWrapping="Wrap"/>

                <TextBlock Text="Tipo:" Style="{StaticResource SectionTitle}"/>
                <TextBox Text="{Binding Tipo, Mode=TwoWay}"/>

                <TextBlock Text="Fecha de Clase:" Style="{StaticResource SectionTitle}"/>
                <DatePicker SelectedDate="{Binding FechaClase, Mode=TwoWay}"/>
            </StackPanel>

            <UniformGrid Columns="3" Margin="74,1,-27,0" Grid.Row="1">
                <Button Content="Publicar" Command="{Binding CrearClaseCommand}" Style="{StaticResource DanceButton}" />
                <Button Content="Cerrar" Command="{Binding CancelarCommand}" Style="{StaticResource DanceButton}" />
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>
