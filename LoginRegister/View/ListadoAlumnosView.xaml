<UserControl x:Class="InfoManager.View.ListadoAlumnosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoManager.View"
             xmlns:viewmodel="clr-namespace:InfoManager.ViewModel"
             xmlns:view="clr-namespace:InfoManager.View" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ListadoAlumnosViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Background>
        <ImageBrush 
        ImageSource="/Resources/BannerBailarina.png" 
        Stretch="UniformToFill" />
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Listado de Alumnos" FontSize="22" FontWeight="Bold" 
               Foreground="#333" Margin="10" Grid.Row="0"/>

        <!-- Scrollable Items Section -->
        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10">
            <ItemsControl ItemsSource="{Binding Items}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1" Padding="10" Background="White">
                            <StackPanel>
                                <!-- Imagen y Botón -->
                                <Button Height="120" Width="120" Background="Transparent" BorderThickness="0"
                                    Command="{Binding DataContext.SelectViewModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding Id}">
                                    <Image Source="{Binding Image}" Stretch="Uniform" Width="100" Height="100"/>
                                </Button>

                                <!-- Nombre con estilo -->
                                <TextBlock Text="{Binding Nombre}" FontSize="16" FontWeight="SemiBold" 
                                       Foreground="#444" HorizontalAlignment="Center" Margin="5"/>
                            </StackPanel>
                            <Border.Effect>
                                <DropShadowEffect Color="Gray" BlurRadius="8" ShadowDepth="2"/>
                            </Border.Effect>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <!-- Content Display Section -->
        <ContentControl Grid.Row="2" Content="{Binding SelectedViewModel}" Margin="10" 
                    Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="15" 
                    MinWidth="450" MaxWidth="600" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
