<UserControl x:Class="InfoManager.View.ListadoAlumnosView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InfoManager.View"
             xmlns:viewmodel="clr-namespace:InfoManager.ViewModel"
             xmlns:view="clr-namespace:InfoManager.View" 
             d:DataContext="{d:DesignInstance Type=viewmodel:ListadoAlumnosViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Background>
        <ImageBrush 
        ImageSource="/Resources/BannerBailarina.png" 
        Stretch="UniformToFill" />
    </UserControl.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Listado de Alumnos" FontSize="22" FontWeight="Bold" 
               Foreground="#333" Margin="10" Grid.Row="0"/>

        <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Disabled" Margin="10">
            <ItemsControl ItemsSource="{Binding Items}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel Orientation="Horizontal" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Margin="8" CornerRadius="12" BorderBrush="#DDD" BorderThickness="1" Padding="10" Background="White">
                            <StackPanel Width="140">
                                <Button Height="120" Width="120" Background="Transparent" BorderThickness="0"
                        Command="{Binding DataContext.SelectViewModelCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        CommandParameter="{Binding Id}">

                                    <Image Source="/Resources/ClaseBanner.png" 
                           Stretch="UniformToFill" 
                           Width="100" 
                           Height="100">
                                        <Image.Clip>
                                            <EllipseGeometry Center="50,50" RadiusX="50" RadiusY="50" />
                                        </Image.Clip>
                                    </Image>
                                </Button>

                                <StackPanel Margin="5">
                                    <TextBlock Text="{Binding Nombre}" 
                               FontSize="15" 
                               FontWeight="Bold" 
                               Foreground="#333" 
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>

                                    <TextBlock Text="{Binding Apellidos}" 
                               FontSize="13" 
                               FontWeight="Normal" 
                               Foreground="#666" 
                               HorizontalAlignment="Center"
                               TextTrimming="CharacterEllipsis"/>
                                </StackPanel>

                            </StackPanel>

                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>

        <ContentControl Grid.Row="2" Content="{Binding SelectedViewModel}" Margin="10" 
                    Background="White" BorderBrush="#DDD" BorderThickness="1" Padding="15" 
                    MinWidth="450" MaxWidth="600" HorizontalAlignment="Center"/>
    </Grid>
</UserControl>
