<UserControl
    x:Class="InfoManager.View.LoginView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:viewmodel="clr-namespace:InfoManager.ViewModel" 
    d:DataContext="{d:DesignInstance Type=viewmodel:LoginViewModel}"
    mc:Ignorable="d"
    HorizontalAlignment="Stretch"
    VerticalAlignment="Stretch">

    <UserControl.Background>
        <ImageBrush ImageSource="/Resources/BackgroundBailarina.png"
                    Stretch="UniformToFill"/>
    </UserControl.Background>

   
    <Grid MinHeight="600" MinWidth="900">

      
        <Border
            Width="460"
            Padding="40"
            Background="#F2FFFFFF"
            CornerRadius="24"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">

            <StackPanel>

                
                <Image Source="/Resources/HarteraphiaIcono.png"
                       Width="120"
                       Margin="0,0,0,20"
                       HorizontalAlignment="Center"/>

               
                <TextBlock
                    Text="Harteraphia Dance School"
                    FontSize="24"
                    FontWeight="Bold"
                    Foreground="Black"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,30"/>

                
                <TextBlock Text="Email" Margin="0,0,0,5"/>

                <ui:TextBox
                    Text="{Binding Name}"
                    Height="42"
                    BorderBrush="#D4AF37"
                    BorderThickness="1"
                    Background="White"
                    Margin="0,0,0,20"/>

               
                <TextBlock Text="Contraseña" Margin="0,0,0,5"/>

                <ui:PasswordBox
                Height="40"
                BorderBrush="#D4AF37"
                Password ="{Binding Password, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Margin="0,0,0,30"/>


                <ui:Button
                    Content="Login"
                    Command="{Binding LoginCommand}"
                    Height="46"
                    Background="Black"
                    Foreground="White"
                    FontSize="16"
                    CornerRadius="12"/>

                <TextBlock
                    HorizontalAlignment="Center"
                    Margin="0,25,0,0">
                    <Run Text="¿No tienes una cuenta? "/>
                    <Hyperlink
                        Command="{Binding RegisterCommand}"
                        Foreground="#D4AF37">
                        Regístrate aquí
                    </Hyperlink>
                </TextBlock>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>








